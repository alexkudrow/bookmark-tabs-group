{
  "manifest_version": 2,

  "name": "Bookmark Tabs Group",
  "short_name": "tabsgroup",
  "description": "Lightweight and minimalistic extension for saving group of tabs to bookmarks. Extends standart chrome behavior. No excess functionality.",
  "version": "1.0",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "bookmarks"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}